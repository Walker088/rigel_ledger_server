  "type": "module",
  "dependencies": {
    "@fortawesome/free-brands-svg-icons": "^6.5.1",
    "@fortawesome/free-solid-svg-icons": "^6.5.1",
    "bootstrap": "^5.3.3",
    "d3": "^7.9.0",
    "dayjs": "^1.11.10",
    "typesafe-i18n": "^5.26.2"
  }
